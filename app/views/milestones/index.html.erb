<h1>Listing milestones</h1>

<table>
  <tr>
    <th>Goal</th>
    <th>Name</th>
    <th>Description</th>
    <th>Stage</th>
    <th>Ends at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @milestones.each do |milestone| %>
  <tr>
    <td><%= milestone.goal.name %></td>
    <td><%= milestone.name %></td>
    <td><%= milestone.description %></td>
    <td><%= milestone.stage %></td>
    <td><%= milestone.ends_at %></td>
    <td><%= link_to 'Show', [@goal, milestone] %></td>
    <td><%= link_to 'Edit', edit_goal_milestone_path(@goal, milestone) %></td>
    <td><%= link_to 'Destroy', [@goal, milestone], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Milestone', new_goal_milestone_path(@goal) %>
